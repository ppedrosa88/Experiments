<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_image"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_image"
        android:supportsRtl="true"
        android:theme="@style/Theme.Experimentos.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".ui.ExperimentSearchView"
            android:exported="false"
            android:theme="@style/Theme.Experimentos.NoActionBar" />
        <activity
            android:name=".ui.ExperimentDetailsView"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Experimentos.NoActionBar" />
        <activity
            android:name=".ui.ExperimentView"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Experimentos.NoActionBar" />
        <activity
            android:name=".ui.CategoryView"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>